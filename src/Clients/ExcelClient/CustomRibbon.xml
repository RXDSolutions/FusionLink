<?xml version="1.0" encoding="utf-8" ?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="OnLoad">
  <ribbon>
    <tabs>
      <tab id="CustomRibbonTab" label="FusionLink">
        <group id="ConnectionGroup" label="Connections">
          <button id="refresh" label="Refresh" size="large" imageMso="Refresh" onAction="OnRefresh" />
          <dynamicMenu id="ConnectionsMenu"
                       label="Change connection"
                       getContent="OnGetContent"
                       invalidateContentOnDrop="true"
                       size="large"
                       imageMso="DataOptionsMenu" />
        </group>
        <group id="CalculateGroup" label="Portfolio">
          <button id="loadPortfolios" label="Load (F8)" size="large" imageMso="DatabaseMoveToSharePoint" onAction="OnLoadPositions" />
          <button id="calculate" label="Calculate (F9)" size="large" imageMso="CalculateNow" onAction="OnCalculate" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>